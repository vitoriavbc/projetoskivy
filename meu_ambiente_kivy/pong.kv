<PongPaddle>:
        size: 20, 120
    canvas:
        Color:
            rgb: (1, 0, 0) if self.player_name == "Player 1" else (0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 20, 120
    canvas:
        Color:
            rgb: (1, 0, 0) if self.player_name == "Player 1" else (0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    score_label: score_label
    
    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        id: score_label
        text: "Player 1: 0  Player 2: 0"
        font_size: 30
        color: 1, 1, 1
        size_hint: 1, None
        height: 50
        pos_hint: {'top': 1}
    
    PongBall:
        id: pong_ball
        center: root.center
    
    PongPaddle:
        id: player_left
        player_name: "Player 1"
        center_y: root.center_y
        x: root.x
    
    PongPaddle:
        id: player_right
        player_name: "Player 2"
        center_y: root.center_y
        x: root.width - self.width